<p id="notice"><%= notice %></p>
<header class="pb-3 mb-4 border-bottom"> </header>
<h1 style="text-align:center;">Items</h1>

<div class="container-md" >
  <table class="table table-striped table-hover ">
    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Size</th>
        <th>Color</th>
        <th>Type</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-group-divider">
      <% @items.each do |item| %>
        <tr>
          <td style="width: 20%"><%= item.title %></td>
          <td><%= item.description %></td>
          <td style="width: 5%"><%= item.size %></td>
          <td style="width: 5%"><%= item.color %></td>
          <td style="width: 15%"><%= item.clothingType %></td>
          <td><%= item.price %></td>
          <td style="width: 5%"><%= link_to 'Show', item, class: "btn btn-outline-info btn-sm", style:"color:black"  %></td>
          <td style="width: 5%"><%= link_to 'Edit', edit_item_path(item), class: "btn btn-outline-warning btn-sm", style:"color:black" %></td>
          <td style="width: 5%"><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm", style:"color:black"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Item', new_item_path, class:"btn btn-secondary", style:"color:white"  %>
</div>
<footer class="pb-3 mb-4 border-bottom"> </footer>