<header class="pb-3 mb-4 border-bottom"> </header>
<h1 class="text-center"> <%= pluralize(@items.count, "Result") %></h1>
<div class="container-md" >
  <table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th> <%= sort_link(@query, :title, "Title", default_order: :asc) %> </th>
            <th> <%= sort_link(@query, :description, "Desc.", default_order: :asc) %> </th>
            <th> <%= sort_link(@query, :size, "Size", default_order: :asc) %> </th>
            <th> <%= sort_link(@query, :color, "Color", default_order: :asc) %> </th>
            <th> <%= sort_link(@query, :clothingType, "Type", default_order: :asc) %> </th>
            <th> <%= sort_link(@query, :price, "Price", default_order: :asc) %> </th>
        </tr>
    </thead>

    <tbody class="table-group-divider">
      <% @items.each do |item| %>
        <tr>
          <td style="width: 20%"><%= link_to item.title, item%></td>
          <td><%= item.description %></td>
          <td style="width: 5%"><%= item.size %></td>
          <td style="width: 5%"><%= item.color %></td>
          <td style="width: 15%"><%= item.clothingType %></td>
          <td><%= item.price %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>
<footer class="pb-3 mb-4 border-bottom"> </footer>